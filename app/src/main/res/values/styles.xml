<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="menu_button">
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/menu_button_text</item>
        <item name="android:paddingTop">@dimen/menu_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/menu_button_padding_bottom</item>
    </style>

    <style name="letter_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
